public String formatName(String firstName, String lastName) {
    //code here
    String fullName;
    if(firstName != '' && lastName != ''){
        fullName = lastName + ', '+firstName;
    }else if(firstName == null || firstName == ''){
        fullName = lastName;
    }else if(lastName == null || lastName == ''){
        fullName=firstName;
    }
    return fullName;
}